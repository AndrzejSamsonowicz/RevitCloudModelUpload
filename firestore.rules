rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read/write for sessionId-based access
    // Note: sessionId acts as the document ID
    match /users/{userId} {
      allow read, write: if true; // Allow access for sessionId-based auth
    }
    
    // Publishing logs - readable by all authenticated or via sessionId, writable by Cloud Functions
    match /publishingLogs/{logId} {
      allow read: if true;
      allow write: if true; // Allow Cloud Functions to write
    }
    
    // Admins collection - only Firebase authenticated admins can read
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
